if [@type] in ["syslog", "relp"] {
<%= File.read('snippets/syslog_standard.conf').gsub(/^/, '  ') %>
}

if [@type] == "syslog" and [syslog_message] =~ /^\- \- \[NXLOG/ {
<%= File.read('snippets/nxlog_standard.conf').gsub(/^/m, '  ') %>
}

if [@type] == "json" {
<%= File.read('snippets/json.conf').gsub(/^/, '  ') %>
}

if [@type] == "elasticsearch_request" {
<%= File.read('snippets/elasticsearch_request.conf').gsub(/^/, '  ') %>
}

if [@type] == "nginx_combined" {
<%= File.read('snippets/nginx_combined.conf').gsub(/^/, '  ') %>
}
